@page
@model GisanParkGolf.Pages.Account.LoginModel
@{
    ViewData["Title"] = "로그인";

    string? messageType = null;
    string? messageTitle = null;
    string? messageContent = null;

    if (!ModelState.IsValid && HttpContext.Request.Method.Equals("POST", StringComparison.OrdinalIgnoreCase))
    {
        messageType = "Error";
        messageTitle = "로그인 실패";

        messageContent = string.Join("\n", ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage));
    }
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="custom-card">
        <div class="w-100" style="max-width: 480px;">
            <input type="hidden" id="PageMessageType" value="@messageType" />
            <input type="hidden" id="PageMessageTitle" value="@messageTitle" />
            <input type="hidden" id="PageMessageContent" value="@messageContent" />
            <form method="post" novalidate>
                <div class="alert alert-primary shadow-sm rounded text-center mb-4">
                    <div class="d-flex align-items-center justify-content-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor"
                             class="bi bi-exclamation-triangle-fill text-primary me-2" viewBox="0 0 16 16">
                            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                        </svg>
                        <h5 class="mb-0 fw-bold">로그인이 필요합니다</h5>
                    </div>
                    <p class="mt-2 mb-0">아이디와 비밀번호를 입력하신 후 로그인을 진행해주세요.</p>
                </div>
                <div class="d-flex justify-content-center mb-0">
                    <div class="input-group" style="width: 360px;">
                        <span class="input-group-text" style="width:80px;">ID</span>
                        <input asp-for="Input.USER_ID" class="form-control" placeholder="아이디를 입력하세요" />
                    </div>
                </div>
                <div class="d-flex justify-content-center mb-0">
                    <div class="input-group" style="width: 360px;">
                        <span class="input-group-text" style="width:80px;">PW</span>
                        <input asp-for="Input.USER_PASSWORD" class="form-control" placeholder="비밀번호를 입력하세요" type="password" />
                    </div>
                </div>
                <div style="height: 32px;"></div>
                <div class="d-flex justify-content-center mb-3" style="gap:10px;">
                    <button type="submit" class="btn btn-primary" style="width:160px;">로그인</button>
                    <a asp-page="/Account/Register" class="btn btn-outline-secondary" style="width:160px;">회원가입</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    window.addEventListener('DOMContentLoaded', function () {
        const messageType = document.getElementById('PageMessageType').value;
        const title = document.getElementById('PageMessageTitle').value;
        const content = document.getElementById('PageMessageContent').value;

        if (messageType) {
            showResultModal(content, title);
        }
    });
</script>