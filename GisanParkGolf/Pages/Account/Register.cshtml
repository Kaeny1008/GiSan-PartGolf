@page
@model GisanParkGolf.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "회원가입";
}

<div class="container mt-4 mb-5">
    <!-- 상단 카드: 페이지 설명 영역 -->
    @await Html.PartialAsync("Shared/Components/_HeaderCard", (ViewData["Title"] as string ?? "제목 없음"
        , "기산 파크골프에 오신 것을 환영합니다. 아래 정보를 입력하여 가입을 완료하세요."))

    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="custom-card p-4">
                <form method="post">

                    @* 전체 유효성 검사 요약 *@
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    @* 아이디 *@
                    <div class="mb-3">
                        <label asp-for="Input.UserId" class="form-label fw-bold"></label>
                        <input asp-for="Input.UserId" class="form-control" placeholder="4~15자리 영문/숫자" />
                        <span asp-validation-for="Input.UserId" class="text-danger small"></span>
                    </div>

                    @* 비밀번호 *@
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Password" class="form-label fw-bold"></label>
                            <input asp-for="Input.Password" class="form-control" placeholder="4~12자리, 특수문자 포함" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.PasswordConfirm" class="form-label fw-bold"></label>
                            <input asp-for="Input.PasswordConfirm" class="form-control" />
                            <span asp-validation-for="Input.PasswordConfirm" class="text-danger small"></span>
                        </div>
                    </div>

                    @* 이름 *@
                    <div class="mb-3">
                        <label asp-for="Input.UserName" class="form-label fw-bold"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger small"></span>
                    </div>

                    @* 주민번호 *@
                    <div class="mb-3">
                        <label class="form-label fw-bold">주민등록번호</label>
                        <div class="input-group">
                            <input asp-for="Input.UserNumber" class="form-control" placeholder="생년월일 6자리" maxlength="6" />
                            <span class="input-group-text">-</span>
                            <input asp-for="Input.UserGender" class="form-control" maxlength="1" />
                            <span class="input-group-text">******</span>
                        </div>
                        <span asp-validation-for="Input.UserNumber" class="text-danger small d-block"></span>
                        <span asp-validation-for="Input.UserGender" class="text-danger small d-block"></span>
                    </div>

                    @* 주소 *@
                    <div class="mb-3">
                        <label asp-for="Input.UserAddress" class="form-label fw-bold"></label>
                        <input asp-for="Input.UserAddress" class="form-control" />
                        <span asp-validation-for="Input.UserAddress" class="text-danger small"></span>
                    </div>

                    @* 상세주소 *@
                    <div class="mb-3">
                        <label asp-for="Input.UserAddress2" class="form-label fw-bold"></label>
                        <input asp-for="Input.UserAddress2" class="form-control" />
                    </div>

                    @* 비고 *@
                    <div class="mb-3">
                        <label asp-for="Input.UserNote" class="form-label fw-bold"></label>
                        <textarea asp-for="Input.UserNote" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold">가입하기</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>