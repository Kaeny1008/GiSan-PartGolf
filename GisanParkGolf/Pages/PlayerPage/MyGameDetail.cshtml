@page "{GameCode}"
@using System.Security.Claims
@model GiSanParkGolf.Pages.PlayerPage.MyGameDetailModel
@{
    ViewData["Title"] = "대회 정보";
}

@section Scripts {
    <script>
        function showCustomModal(actionType) {
            var modal = new bootstrap.Modal(document.getElementById('cancelModal'));
            var okBtn = document.getElementById('modalOkBtn');
            var modalTitle = document.querySelector('#cancelModal .modal-title');
            var modalBody = document.querySelector('#cancelModal .modal-body');

            if (actionType === 'cancel') {
                modalTitle.textContent = "참가취소 확인";
                modalBody.innerHTML = `
                    정말 참가를 취소하시겠습니까?
                    <div class="mt-2">
                      <label for="cancelReasonInput" class="form-label">취소 사유 <span style="color:red">*</span></label>
                      <textarea id="cancelReasonInput" class="form-control" rows="2" maxlength="200" placeholder="사유를 입력하세요."></textarea>
                      <div id="cancelReasonError" class="text-danger mt-1" style="display:none;">취소 사유를 입력하세요.</div>
                    </div>
                `;
                okBtn.onclick = function() {
                    var reason = document.getElementById('cancelReasonInput').value || '';
                    if (!reason.trim()) {
                        document.getElementById('cancelReasonError').style.display = '';
                        return;
                    }
                    document.getElementById('CancelReason').value = reason;
                    modal.hide();
                    document.getElementById('cancelForm').submit();
                };
                okBtn.textContent = "예(취소)";
                okBtn.className = "btn btn-danger";
            } else if (actionType === 'rejoin') {
                modalTitle.textContent = "재참가 안내";
                modalBody.innerHTML = `
                    <div>
                        재참가를 진행하시겠습니까?<br>
                        <span class="text-danger">※ 관리자에 의해 강제 취소된 경우에는 재참가가 불가합니다.</span>
                    </div>
                `;
                okBtn.onclick = function() {
                    modal.hide();
                    document.getElementById('rejoinForm').submit();
                };
                okBtn.textContent = "예(재참가)";
                okBtn.className = "btn btn-success";
            }
            modal.show();
        }
    </script>
}

<div class="container mt-4">
    @await Html.PartialAsync("Shared/Components/_HeaderCard", (ViewData["Title"] as string ?? "제목 없음", "선택한 대회의 상세 정보를 확인할 수 있습니다."))

    <div class="row justify-content-center">
        <!-- 1. 왼쪽: 대회 정보 -->
        <div class="col-lg-5 col-md-6 mb-3">
            <div class="custom-card shadow-sm h-100">
                <div class="d-flex align-items-center mb-2">
                    <i class="bi bi-flag-fill me-2 text-primary"></i>
                    <h5 class="card-title mb-0 fw-bold">대회 정보</h5>
                </div>
                <hr class="mt-2 mb-3" />
                <div class="row g-3">
                    <!-- ...대회 정보 내용... -->
                    <div class="col-12">
                        <label class="form-label">대회명</label>
                        <input class="form-control" value="@Model.Game?.GameName" disabled />
                    </div>
                    <div class="col-12">
                        <label class="form-label">대회일자</label>
                        <input class="form-control" value="@Model.Game?.GameDate.ToString("yyyy-MM-dd HH:mm:ss")" disabled />
                    </div>
                    <div class="col-12">
                        <label class="form-label">경기장</label>
                        <input class="form-control" value="@Model.Game?.StadiumName" disabled />
                    </div>
                    <div class="col-12">
                        <label class="form-label">방식</label>
                        <input class="form-control" value="@Model.Game?.PlayModeDisplay" disabled />
                    </div>
                    <div class="col-12">
                        <label class="form-label">주최</label>
                        <input class="form-control" value="@Model.Game?.GameHost" disabled />
                    </div>
                    <div class="col-12">
                        <label class="form-label">홀당 최대인원</label>
                        <input class="form-control" value="@Model.Game?.HoleMaximum" disabled />
                    </div>
                    <div class="col-12">
                        <label class="form-label">참가인원</label>
                        <input class="form-control" value="@Model.Game?.ParticipantNumber" disabled />
                    </div>
                </div>
            </div>
        </div>
        <!-- 2. 오른쪽: 아코디언들 -->
        <div class="col-lg-7 col-md-6 mb-3">
            <div class="accordion" id="gameDetailAccordion">
                <!-- 참가 상태 -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingStatus">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseStatus" aria-expanded="false" aria-controls="collapseStatus">
                            <i class="bi bi-person-check-fill me-2 text-success"></i> 참가 상태
                        </button>
                    </h2>
                    <div id="collapseStatus" class="accordion-collapse collapse show" aria-labelledby="headingStatus">
                        <div class="accordion-body">
                            <!-- 참가 상태 카드 내용 -->
                            <div class="row g-3">
                                @if (Model.Game?.IsCancelled == 0)
                                {
                                    <span class="badge bg-success" style="font-size:1.2em;">
                                        @if (Model.Game?.IsCancelled == 1)
                                        {
                                            // 취소됨
                                            <span class="badge bg-danger" style="font-size:1.2em;">
                                                <i class="bi bi-x-circle-fill"></i> 대회 참가 취소됨
                                            </span>
                                        }
                                        else if (Model.Game?.GameDate < DateTime.Now)
                                        {
                                            // 대회 종료됨
                                            <span class="badge bg-secondary" style="font-size:1.2em;">
                                                <i class="bi bi-calendar-check"></i> 대회가 종료되었습니다
                                            </span>
                                        }
                                        else
                                        {
                                            // 정상 참가중(대회 진행 전 또는 중)
                                            <span class="badge bg-success" style="font-size:1.2em;">
                                                <i class="bi bi-check-circle-fill"></i> 대회 참가자로 등록되었습니다!
                                            </span>
                                        }
                                    </span>
                                }
                                else
                                {
                                    <div class="col-md-6">
                                        <label class="form-label">취소일자</label>
                                        <input class="form-control" value="@Model.Game?.CancelDate?.ToString("yyyy-MM-dd HH:mm:ss")" disabled />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">취소사유</label>
                                        <input class="form-control" value="@Model.Game?.CancelReason" disabled />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">관리자 취소 승인</label>
                                        <input class="form-control"
                                               value="@(string.IsNullOrEmpty(Model.Game?.Approval) ? "" : "예")"
                                               disabled />
                                    </div>
                                    <div class="col-12 mt-3">
                                        <span class="badge bg-danger" style="font-size:1.2em;">
                                            <i class="bi bi-x-circle-fill"></i> 현재 <strong>대회 참가 취소됨</strong>
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 코스배치 결과 -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingAssign">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseAssign" aria-expanded="false" aria-controls="collapseAssign">
                            <i class="bi bi-map me-2 text-info"></i>
                            코스배치 결과
                            @if (Model.Game?.AssignedCourseName != null)
                            {
                                <span class="ms-2 text-info" style="font-size:0.92em;">
                                    <i class="bi bi-info-circle"></i>
                                    <span class="fw-normal">배치결과를 확인하세요</span>
                                </span>
                            }
                        </button>
                    </h2>
                    <div id="collapseAssign" class="accordion-collapse collapse show" aria-labelledby="headingAllAssign">
                        <div class="accordion-body">
                            <!-- 코스배치 결과 카드 내용 -->
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">코스명</label>
                                    <input class="form-control" value="@Model.Game?.AssignedCourseName" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">홀번호</label>
                                    <input class="form-control" value="@Model.Game?.AssignedHoleNumber" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">팀번호</label>
                                    <input class="form-control" value="@Model.Game?.AssignedTeamNumber" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">순번</label>
                                    <input class="form-control" value="@Model.Game?.AssignedCourseOrder" disabled />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 전체 배정 결과 -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingAllAssign">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseAllAssign" aria-expanded="false" aria-controls="collapseAllAssign">
                            <i class="bi bi-person-check-fill me-2 text-success"></i> 전체 코스배치 결과
                        </button>
                    </h2>
                    <div id="collapseAllAssign" class="accordion-collapse collapse show" aria-labelledby="headingAllAssign">
                        <div class="accordion-body">
                            <!-- 필터 및 버튼 영역 -->
                            @{
                                var searchModel = new GisanParkGolf.Pages.Shared.SearchControlModel
                                {
                                    PageSize = Model?.PageSize ?? 5,
                                    SearchField = Model?.SearchField ?? "UserName",
                                    SearchQuery = Model?.SearchQuery ?? string.Empty,
                                    ResetPageName = "./MyGameDetail",
                                    FieldOptions = new List<GisanParkGolf.Pages.Shared.SearchFieldOption>
                                                        {
                                                        new() { Value = "UserName", Text = "이름" },
                                                        new() { Value = "UserId", Text = "아이디" },
                                                        new() { Value = "TeamNumber", Text = "팀번호" }
                                                        }
                                };

                                ViewData["gameCode"] = Model?.GameCode ?? Model?.Game?.GameCode;
                            }
                            @await Html.PartialAsync("_SearchControl", searchModel)
                            <!-- 전체 배정 결과 테이블 내용 -->
                            <div class="table-responsive">
                                <table class="table table-bordered table-sm align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>No</th>
                                            <th>이름</th>
                                            <th>아이디</th>
                                            <th>코스명</th>
                                            <th>홀번호</th>
                                            <th>팀번호</th>
                                            <th>순번</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var myUserId = User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier);
                                            int rowNo = ((Model?.PageIndex ?? 1) - 1) * (Model?.PageSize ?? 5) + 1;
                                        }
                                        @if (Model?.AssignmentResult != null)
                                        {
                                            foreach (var assign in Model.AssignmentResult)
                                            {
                                                <tr class="@(assign.UserId == myUserId ? "table-info" : "")">
                                                    <td>@rowNo</td>
                                                    <td>@assign?.UserName</td>
                                                    <td>@assign?.UserId</td>
                                                    <td>@assign?.CourseName</td>
                                                    <td>@assign?.HoleNumber</td>
                                                    <td>@assign?.TeamNumber</td>
                                                    <td>@assign?.CourseOrder</td>
                                                </tr>
                                                rowNo++;
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!-- 페이지네이션 컨트롤 -->
                            @{
                                var pagemodel = new GisanParkGolf.Pages.Shared.PaginationModel
                                {
                                    PageIndex = Model?.PageIndex ?? 1,
                                    TotalPages = Model?.AssignmentResult?.TotalPages ?? 1,
                                    GetPageUrl = i => Url.Page(
                                    "./MyGameDetail",
                                    null,
                                    new
                                    {
                                        SearchField = Model?.SearchField,
                                        SearchQuery = Model?.SearchQuery,
                                        PageIndex = i,
                                        PageSize = Model?.PageSize ?? 5
                                    },
                                    null
                                    ) ?? ""
                                };
                            }
                            @await Html.PartialAsync("_Pagination", pagemodel)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a asp-page="MyGame" class="btn btn-secondary btn-lg">목록으로</a>
            @if ((Model?.Game?.IsCancelled ?? 1) == 0)
            {
                <form id="cancelForm"
                      method="post"
                      asp-page-handler="Cancel"
                      asp-route-GameCode="@(Model?.Game?.GameCode ?? string.Empty)"
                      class="d-inline">
                    <input type="hidden" id="CancelReason" name="CancelReason" />
                    <button type="button" class="btn btn-danger btn-lg" onclick="showCustomModal('cancel')">참가취소</button>
                </form>
            }
            else
            {
                <form id="rejoinForm"
                      method="post"
                      asp-page-handler="Rejoin"
                      asp-route-GameCode="@(Model?.Game?.GameCode ?? string.Empty)"
                      class="d-inline">
                    <button type="button" class="btn btn-success btn-lg" onclick="showCustomModal('rejoin')">재참가</button>
                </form>
            }
        </div>
    </div>
</div>

<!-- 공통 모달: 참가취소/재참가 -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">확인</h5>
            </div>
            <div class="modal-body">
                정말 참가를 취소하시겠습니까?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">아니오</button>
                <button type="button" class="btn btn-primary" id="modalOkBtn">예</button>
            </div>
        </div>
    </div>
</div>

<!-- 공통 모달: 참가취소/재참가 -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">확인</h5>
            </div>
            <div class="modal-body">
                정말 참가를 취소하시겠습니까?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">아니오</button>
                <button type="button" class="btn btn-primary" id="modalOkBtn">예</button>
            </div>
        </div>
    </div>
</div>