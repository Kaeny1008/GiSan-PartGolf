@page
@model GiSanParkGolf.Pages.Manager.GameResultModel
@{
    ViewData["Title"] = "팀 단위 스코어 입력";
}

<div class="container mt-4">
    @foreach (var course in Model.TeamScoreCourses)
    {
        <div class="custom-card mb-5">
            <div class="card-title fw-bold fs-5 mb-2" style="color:#1d4a1d;">코스명: @course.CourseName</div>
            <div class="table-responsive" style="overflow-x:auto;">
                <table class="table align-middle scorecard-table">
                    <thead>
                        <tr>
                            <th style="width:40px;">No.</th>
                            <th style="width:100px;">코스순번</th>
                            <th style="width:90px;">팀번호</th>
                            <th style="width:120px;">참가자명</th>
                            <th style="width:120px;">참가자ID</th>
                            @foreach (var h in course.HoleNumbers)
                            {
                                <th style="width:68px;">@h 홀</th>
                            }
                            <th style="width:60px;">합계</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < course.TeamRows.Count; i++)
                        {
                            var row = course.TeamRows[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@row.CourseOrder</td>
                                <td>@row.TeamNumber</td>
                                <td>@row.ParticipantName</td>
                                <td>@row.ParticipantId</td>
                                @foreach (var h in course.HoleNumbers)
                                {
                                    <td>
                                        <input type="number"
                                               name="Score_@course.CourseName@row.TeamNumber@row.ParticipantId@h"
                                               value="@(row.Scores.ContainsKey(h) ? row.Scores[h].ToString() : "")"
                                               min="1" max="20"
                                               class="form-control text-center"
                                               style="width:48px;" />
                                    </td>
                                }
                                <td>
                                    @{
                                        int total = course.HoleNumbers.Sum(h => row.Scores.ContainsKey(h) ? row.Scores[h] : 0);
                                    }
                                    <span>@total</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    <div class="mt-3 text-end">
        <button type="submit" class="btn btn-success px-5 py-2" style="font-weight:bold; font-size:1.1em; border-radius:0.6rem;">저장</button>
    </div>
</div>