@model GisanParkGolf.Components.SearchViewComponent.SearchViewModel

<div class="row">
    <div class="col-12 mb-2">
        <div class="form-check">
            <input type="checkbox" name="ReadyUserOnly" value="true" asp-for="ReadyUserOnly" class="form-check-input" id="readyUserCheck" />
            <label class="form-check-label" for="readyUserCheck">
                승인대기만 보기
            </label>
        </div>
    </div>

    <div class="col-6">
        <div class="input-group">
            <div class="col-md-2">
                <select name="SearchField" asp-for="SearchField" asp-items="Model.SearchFields" class="form-select form-select-sm"></select>
            </div>

            <div class="col-md-6">
                <input type="search" name="SearchQuery" asp-for="SearchQuery" class="form-control form-control-sm" placeholder="검색어 입력" />
            </div>

            <div class="col-md-4 d-flex">
                <button class="btn btn-primary btn-sm flex-grow-1" type="submit" style="margin-right: 5px;">검색</button>
                <a href="@Context.Request.Path" class="btn btn-secondary btn-sm flex-grow-1">초기화</a>
            </div>
        </div>
    </div>
</div>