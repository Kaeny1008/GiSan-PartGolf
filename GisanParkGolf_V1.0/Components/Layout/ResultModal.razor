@inherits ComponentBase

@if (ShowModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.3); display:block;" aria-labelledby="resultModalLabel" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="resultModalLabel">@ModalTitle</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">@ModalMessage</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @onclick="Close">확인</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    public bool ShowModal { get; set; }
    public string ModalTitle { get; set; } = "알림";
    public string ModalMessage { get; set; } = "";

    public void Show(string message, string? title = null)
    {
        ModalMessage = message;
        ModalTitle = title ?? "알림";
        ShowModal = true;
        StateHasChanged();
    }

    void Close()
    {
        ShowModal = false;
        StateHasChanged();
    }
}