@page
@model GiSanParkGolf.Pages.AdminPage.GameListModel
@{
    ViewData["Title"] = "대회 목록";
}

<div class="mb-3 text-center">
    <h4 class="fw-bold mb-2">@ViewData["Title"]</h4>
    <p class="text-muted" style="font-size: 0.95rem;">
        대회를 개최, 수정 및 관리할 수 있는 페이지입니다.
    </p>
</div>

<div class="container mt-4">
    <div class="custom-card">
        <div class="d-flex gap-2">
            <a asp-page="./GameUpsert" class="btn btn-primary">신규 대회 개최</a>
        </div>
        <!-- 필터 및 버튼 영역 -->
        <div class="card-header py-3">
            <form method="get" class="d-flex flex-wrap align-items-center gap-2">
                <!-- 페이지당 행 수 선택 드롭다운 -->
                <select asp-for="PageSize" class="form-select" style="max-width: auto;" onchange="this.form.submit()">
                    <option value="10">10개씩 보기</option>
                    <option value="20">20개씩 보기</option>
                    <option value="50">50개씩 보기</option>
                </select>
                <select asp-for="SearchField" class="form-select" style="max-width: 150px;">
                    <option value="GameName">대회명</option>
                    <option value="GameHost">주최</option>
                    <option value="StadiumName">경기장</option>
                </select>
                <input type="text" asp-for="SearchQuery" class="form-control" placeholder="대회명 또는 주최로 검색..." />
                <button type="submit" class="btn btn-primary">검색</button>
                <a asp-page="./GameList" class="btn btn-secondary">초기화</a>
            </form>
        </div>

        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>상태</th>
                    <th>대회명</th>
                    <th>대회일시</th>
                    <th>경기장</th>
                    <th>주최</th>
                    <th>참가인원</th>
                    <th>관리</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.GameList != null && Model.GameList.Any())
                {
                    foreach (var game in Model.GameList)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@game.GameStatus</span></td>
                            <td>@game.GameName</td>
                            <td>@game.GameDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@game.StadiumName</td>
                            <td>@game.GameHost</td>
                            <td>@game.ParticipantNumber</td>
                            <td>
                                <a asp-page="./GameUpsert" asp-route-gameCode="@game.GameCode" class="btn btn-sm btn-outline-secondary">수정</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">데이터가 없습니다.</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- 페이징 컨트롤 -->
        @{
            var prevDisabled = !Model.GameList.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.GameList.HasNextPage ? "disabled" : "";
        }
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @prevDisabled">
                    <a class="page-link" asp-page="./GameList"
                       asp-route-PageIndex="@(Model.PageIndex - 1)"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-SearchField="@Model.SearchField"
                       asp-route-SearchQuery="@Model.SearchQuery">이전</a>
                </li>
                @for (int i = 1; i <= Model.GameList.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" asp-page="./GameList"
                           asp-route-PageIndex="@i"
                           asp-route-PageSize="@Model.PageSize"
                           asp-route-SearchField="@Model.SearchField"
                           asp-route-SearchQuery="@Model.SearchQuery">@i</a>
                    </li>
                }
                <li class="page-item @nextDisabled">
                    <a class="page-link" asp-page="./GameList"
                       asp-route-PageIndex="@(Model.PageIndex + 1)"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-SearchField="@Model.SearchField"
                       asp-route-SearchQuery="@Model.SearchQuery">다음</a>
                </li>
            </ul>
        </nav>
    </div>
</div>