@page
@model GisanParkGolf_Core.Pages.AdminPage.GameHandicapLogModel
@{
    ViewData["Title"] = "핸디캡 변경 이력";
    int rowNum = 1;
}

<!-- 상단 카드: 페이지 설명 영역 -->
@await Html.PartialAsync("Shared/Components/_HeaderCard", (ViewData["Title"] as string ?? "제목 없음"
    , "변경된 핸디캡의 이력을 조회할 수 있습니다."))

<div class="container mt-4">
    <div class="custom-card">
        <!-- 검색 영역 -->
        <div class="row mb-4">
            <div class="col-md-8">
                @{
                    var searchModel = new GisanParkGolf_Core.Pages.Shared.SearchControlModel
                    {
                        PageSize = Model.PageSize,
                        SearchField = Model.SearchField,
                        SearchQuery = Model.SearchQuery,
                        ResetPageName = "./GameHandicapLog",
                        FieldOptions = new List<GisanParkGolf_Core.Pages.Shared.SearchFieldOption>
                                {
                                new() { Value = "UserName", Text = "이름" },
                                new() { Value = "UserId", Text = "ID" }
                                }
                    };
                }
                @await Html.PartialAsync("_SearchControl", searchModel)
            </div>
            <div class="col-md-4 text-end">
                <a asp-page="/AdminPage/GameHandicap" class="btn btn-outline-secondary">
                    <i class="bi bi-pencil-square"></i> 핸디캡 관리 돌아가기
                </a>
            </div>
        </div>

        <!-- 로그 출력 테이블 -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>No</th>
                        <th>ID</th>
                        <th>이름</th>
                        <th>나이</th>
                        <th>이전 핸디캡</th>
                        <th>변경 핸디캡</th>
                        <th>이전 방식</th>
                        <th>변경 방식</th>
                        <th>수정자</th>
                        <th>변경일시</th>
                        <th>변경 사유</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Logs.Any())
                    {
                        @foreach (var log in Model.Logs)
                        {
                            <tr>
                                <td class="text-center">@(rowNum++)</td>
                                <td>@log.UserId</td>
                                <td>@log.UserName</td>
                                <td class="text-center">@log.Age</td>
                                <td class="text-center">@log.PrevHandicap</td>
                                <td class="text-center">@log.NewHandicap</td>
                                <td class="text-center">@log.PrevSource</td>
                                <td class="text-center">@log.NewSource</td>
                                <td class="text-center">@log.ChangedBy</td>
                                <td>@log.ChangedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@log.Reason</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-center text-muted p-4">
                                ⚠️ 핸디캡 변경 로그가 없습니다.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- 페이지네이션 컨트롤 -->
        @{
            var pagemodel = new GisanParkGolf_Core.Pages.Shared.PaginationModel
            {
                PageIndex = Model.PageIndex,
                TotalPages = Model.Logs.TotalPages,
                GetPageUrl = i => Url.Page(
                "./GameHandicapLog",
                null,
                new
                {
                    SearchField = Model.SearchField,
                    SearchQuery = Model.SearchQuery,
                    PageIndex = i,
                    PageSize = Model.PageSize
                }, null) ?? ""
            };
        }
        @await Html.PartialAsync("_Pagination", pagemodel)
    </div>
</div>