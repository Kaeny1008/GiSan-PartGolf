@page
@model GiSanParkGolf.Pages.PlayerPage.MyGameModel
@{
    ViewData["Title"] = "참여 대회 목록";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Enter키로 검색
            $('#SearchQuery').keypress(function (e) {
                if (e.which === 13) {
                    $(this).closest('form').submit();
                }
            });
        });
    </script>
}

<div class="mb-3 text-center">
    <h4 class="fw-bold mb-2">참여 대회 목록</h4>
    <p class="text-muted" style="font-size: 0.95rem;">
        내 대회의 결과 및 참가여부 수정을 할 수 있습니다.
    </p>
</div>

<div class="container mt-4">
    <div class="custom-card">
        <!-- 검색/필터 폼 -->
        <form method="get" class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <select asp-for="PageSize" class="form-select" style="width:auto" onchange="this.form.submit()">
                <option value="10">10개씩 보기</option>
                <option value="20">20개씩 보기</option>
                <option value="50">50개씩 보기</option>
            </select>
            <select asp-for="SearchField" class="form-select" style="width:150px;">
                <option value="GameName">대회명</option>
                <option value="StadiumName">경기장</option>
                <option value="GameHost">주최자</option>
            </select>
            <input type="text" asp-for="SearchQuery" class="form-control" placeholder="검색어" id="SearchQuery" />
            <button type="submit" class="btn btn-primary">검색</button>
            <a asp-page="MyGame" class="btn btn-secondary">초기화</a>
        </form>

        <!-- 목록 테이블 -->
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>No</th>
                    <th>대회명</th>
                    <th>경기장</th>
                    <th>주최자</th>
                    <th>대회일자</th>
                    <th>모집시작</th>
                    <th>모집종료</th>
                    <th>상태</th>
                    <th>참가여부</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.GameList != null && Model.GameList.Any())
                {
                    int no = (Model.PageIndex - 1) * Model.PageSize;
                    foreach (var game in Model.GameList)
                    {
                        <tr>
                            <td>@(++no)</td>
                            <td>
                                <a asp-page="MyGameDetail" asp-route-GameCode="@game.GameCode">
                                    @GisanParkGolf_Core.Helpers.StringHelper.CutStringUnicode(game.GameName ?? "", 25)
                                </a>
                            </td>
                            <td>@game.StadiumName</td>
                            <td>@game.GameHost</td>
                            <td>@game.GameDate.ToString("yyyy-MM-dd")</td>
                            <td>@game.StartRecruiting.ToString("yyyy-MM-dd")</td>
                            <td>@game.EndRecruiting.ToString("yyyy-MM-dd")</td>
                            <td>@GisanParkGolf_Core.Helpers.GameStatusHelper.ToDisplay(game.GameStatus)</td>
                            <td>@game.IsCancelledText</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted">참가 신청 또는 참가한 데이터가 없습니다.</td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- 총 건수 -->
        <div style="text-align:right; font-style:italic; font-size:8pt;">
            총 건수: <span>@(Model.GameList?.TotalCount ?? 0)</span>
        </div>
        <!-- 페이징 컨트롤 -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @{
                    var prevDisabled = !(Model.GameList?.HasPreviousPage ?? false) ? "disabled" : "";
                    var nextDisabled = !(Model.GameList?.HasNextPage ?? false) ? "disabled" : "";
                }
                <li class="page-item @prevDisabled">
                    <a class="page-link"
                       asp-page="MyGame"
                       asp-route-PageIndex="@(Model.PageIndex - 1)"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-SearchField="@Model.SearchField"
                       asp-route-SearchQuery="@Model.SearchQuery">이전</a>
                </li>
                @for (int i = 1; i <= (Model.GameList?.TotalPages ?? 1); i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link"
                           asp-page="MyGame"
                           asp-route-PageIndex="@i"
                           asp-route-PageSize="@Model.PageSize"
                           asp-route-SearchField="@Model.SearchField"
                           asp-route-SearchQuery="@Model.SearchQuery">@i</a>
                    </li>
                }
                <li class="page-item @nextDisabled">
                    <a class="page-link"
                       asp-page="MyGame"
                       asp-route-PageIndex="@(Model.PageIndex + 1)"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-SearchField="@Model.SearchField"
                       asp-route-SearchQuery="@Model.SearchQuery">다음</a>
                </li>
            </ul>
        </nav>
    </div>
</div>