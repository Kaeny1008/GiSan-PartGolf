@page
@model GiSanParkGolf.Pages.PlayerPage.JoinGameModel
@{
    ViewData["Title"] = "참여가능 대회 목록";
}

@using GisanParkGolf_Core.Helpers

<div class="mb-3 text-center">
    <h4 class="fw-bold mb-2">@ViewData["Title"]</h4>
    <p class="text-muted" style="font-size: 0.95rem;">
        참가하려는 대회명을 선택하여 참가신청을 하십시오.
    </p>
</div>

<div class="container mt-4">
    <div class="custom-card">
        <!-- 검색/필터 폼 -->
        <form method="get" class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <select asp-for="PageSize" class="form-select" style="width:auto" onchange="this.form.submit()">
                <option value="10">10개씩 보기</option>
                <option value="20">20개씩 보기</option>
                <option value="50">50개씩 보기</option>
            </select>
            <select asp-for="SearchField" class="form-select" style="width:150px;">
                <option value="GameName">대회명</option>
                <option value="StadiumName">경기장</option>
                <option value="GameHost">주최자</option>
            </select>
            <input type="text" asp-for="SearchQuery" class="form-control" placeholder="검색어" />
            <button type="submit" class="btn btn-primary">검색</button>
            <a asp-page="JoinGame" class="btn btn-secondary">초기화</a>
        </form>

        <!-- 목록 테이블 -->
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>No</th>
                    <th>대회명</th>
                    <th>경기장</th>
                    <th>주최자</th>
                    <th>대회일자</th>
                    <th>모집시작</th>
                    <th>모집종료</th>
                    <th>참가자</th>
                    <th>상태</th>
                    <th>신청</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.GameList != null && Model.GameList.Any())
                {
                    int no = (Model.PageIndex - 1) * Model.PageSize;
                    foreach (var game in Model.GameList)
                    {
                        <tr>
                            <td>@(++no)</td>
                            <td>@game.GameName</td>
                            <td>@game.StadiumName</td>
                            <td>@game.GameHost</td>
                            <td>@game.GameDate.ToString("yyyy-MM-dd")</td>
                            <td>@game.StartRecruiting.ToString("yyyy-MM-dd")</td>
                            <td>@game.EndRecruiting.ToString("yyyy-MM-dd")</td>
                            <td>@game.ParticipantNumber</td>
                            <td>
                                <span class="@(GameStatusHelper.ToDisplay(game.GameStatus) == "모집중" ? "text-primary" : "")">
                                    @GameStatusHelper.ToDisplay(game.GameStatus)
                                </span>
                            </td>
                            <td>
                                @if (GameStatusHelper.ToDisplay(game.GameStatus) == "모집중")
                                {
                                    @if (!string.IsNullOrEmpty(game.GameCode) && Model.JoinedGameCodes.Contains(game.GameCode))
                                    {
                                        <form method="post" asp-page-handler="Leave" asp-route-gameCode="@game.GameCode" style="display:inline">
                                            <button type="submit" class="btn btn-danger btn-sm">참가취소</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-page-handler="Join" asp-route-gameCode="@game.GameCode" style="display:inline">
                                            <button type="submit" class="btn btn-success btn-sm">참가신청</button>
                                        </form>
                                    }
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="text-center text-muted">참가 신청 가능한 대회가 없습니다.</td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- 총 건수 -->
        <div style="text-align:right">
            총 건수: <span>@Model.GameList?.TotalCount ?? 0</span>
        </div>
        <!-- 페이징 컨트롤 -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @{
                    var prevDisabled = !(Model.GameList?.HasPreviousPage ?? false) ? "disabled" : "";
                    var nextDisabled = !(Model.GameList?.HasNextPage ?? false) ? "disabled" : "";
                }
                <li class="page-item @prevDisabled">
                    <a class="page-link"
                       asp-page="JoinGame"
                       asp-route-PageIndex="@(Model.PageIndex - 1)"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-SearchField="@Model.SearchField"
                       asp-route-SearchQuery="@Model.SearchQuery">이전</a>
                </li>
                @for (int i = 1; i <= (Model.GameList?.TotalPages ?? 1); i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link"
                           asp-page="JoinGame"
                           asp-route-PageIndex="@i"
                           asp-route-PageSize="@Model.PageSize"
                           asp-route-SearchField="@Model.SearchField"
                           asp-route-SearchQuery="@Model.SearchQuery">@i</a>
                    </li>
                }
                <li class="page-item @nextDisabled">
                    <a class="page-link"
                       asp-page="JoinGame"
                       asp-route-PageIndex="@(Model.PageIndex + 1)"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-SearchField="@Model.SearchField"
                       asp-route-SearchQuery="@Model.SearchQuery">다음</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

