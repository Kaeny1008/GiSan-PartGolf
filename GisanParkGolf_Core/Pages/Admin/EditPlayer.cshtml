@page "{id}"
@model GisanParkGolf_Core.Pages.Admin.EditPlayerModel
@{
    ViewData["Title"] = "회원 정보 수정 (관리자)";
}

<div class="container mt-4 mb-5">
    <!-- 상단 카드: 페이지 설명 영역 -->
    <div class="mb-4 text-center">
        <h4 class="fw-bold mb-2">@ViewData["Title"]</h4>
        <p class="text-muted" style="font-size: 0.95rem;">
            관리자 권한으로 회원 정보를 수정합니다.
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="custom-card p-4">
                <form method="post">
                    <input type="hidden" asp-for="Input.UserId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.UserId" class="form-label fw-bold"></label>
                        <input asp-for="Input.UserId" class="form-control" readonly />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.NewPassword" class="form-label fw-bold"></label>
                            <input asp-for="Input.NewPassword" class="form-control" placeholder="수정시에만 입력" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label fw-bold"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="수정시에만 입력" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.UserName" class="form-label fw-bold"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">주민등록번호</label>
                        <div class="input-group">
                            <input asp-for="Input.UserNumber" class="form-control" placeholder="생년월일 6자리" maxlength="6" />
                            <span class="input-group-text">-</span>
                            <input asp-for="Input.UserGender" class="form-control" maxlength="1" />
                            <span class="input-group-text">******</span>
                        </div>
                        <span asp-validation-for="Input.UserNumber" class="text-danger small d-block"></span>
                        <span asp-validation-for="Input.UserGender" class="text-danger small d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.UserAddress" class="form-label fw-bold"></label>
                        <input asp-for="Input.UserAddress" class="form-control" />
                        <span asp-validation-for="Input.UserAddress" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.UserAddress2" class="form-label fw-bold"></label>
                        <input asp-for="Input.UserAddress2" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.UserNote" class="form-label fw-bold"></label>
                        <textarea asp-for="Input.UserNote" class="form-control" rows="4"></textarea>
                    </div>

                    <hr class="my-4" />

                    @* === 관리자 전용 설정 === *@
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.UserClass" class="form-label fw-bold"></label>
                            <select asp-for="Input.UserClass" asp-items="Model.UserClassOptions" class="form-select"></select>
                            <span asp-validation-for="Input.UserClass" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.UserWClass" class="form-label fw-bold"></label>
                            <select asp-for="Input.UserWClass" asp-items="Model.ApprovalStatusOptions" class="form-select"></select>
                            <span asp-validation-for="Input.UserWClass" class="text-danger small"></span>
                        </div>
                    </div>


                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-danger btn-lg fw-bold">관리자 권한으로 수정</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>